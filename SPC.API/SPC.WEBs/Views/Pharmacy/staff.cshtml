@model IEnumerable<SPC.Web.Models.Pharmacy>
@using System.Linq
@{
    ViewBag.Title = "staff";
    Layout = "~/Views/Shared/_StaffNavigation.cshtml";
}

<div class="container-fluid py-4">
    <div class="card">
        <div class="card-header bg-primary text-white">
            <div class="row align-items-center">
                <div class="col">
                    <h3 class="m-0">All Registered Pharmacies</h3>
                </div>
            </div>
        </div>

        <div class="card-body">
            <!-- Search and Filter Section -->
            <!-- Pharmacies Table -->
            @if (Model != null && Model.Any())
            {
                <div class="table-responsive">
                    <table class="table table-hover table-striped">
                        <thead class="table-light">
                            <tr>
                                <th>ID</th>
                                <th>Pharmacy Name</th>
                                <th>Email</th>
                                <th>Contact Number</th>
                                <th>Address</th>
                                <th>Registration Date</th>

                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var pharmacy in Model)
                            {
                                <tr>
                                    <td>@pharmacy.Id</td>
                                    <td>
                                        <strong>@pharmacy.PharmacyName</strong>
                                    </td>
                                    <td>@pharmacy.Email</td>
                                    <td>@pharmacy.ContactNumber</td>
                                    <td>@pharmacy.Location</td>
                                    <td>@pharmacy.RegistrationNumber</td>

                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            }
            else
            {
                <div class="alert alert-info text-center">
                    <i class="fas fa-info-circle me-2"></i>
                    No pharmacies found in the system.
                </div>
            }
        </div>
    </div>
</div>

@section Scripts {
    <script>
        function confirmDelete() {
            return confirm('Are you sure you want to delete this pharmacy? This action cannot be undone.');
        }

        $(document).ready(function () {
            // Enable tooltips
            var tooltipTriggerList = [].slice.call(document.querySelectorAll('[data-bs-toggle="tooltip"]'))
            var tooltipList = tooltipTriggerList.map(function (tooltipTriggerEl) {
                return new bootstrap.Tooltip(tooltipTriggerEl)
            });
        });
    </script>
}