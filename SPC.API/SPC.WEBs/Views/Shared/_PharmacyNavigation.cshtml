@{
    Layout = null; <!-- Ensures this is treated as a layout -->
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewData["Title"] - Pharmacy Dashboard</title>

    <!-- Bootstrap & Icons -->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.3/css/all.min.css">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.3/dist/css/bootstrap.min.css" rel="stylesheet">

    <style>
        /* Sidebar Styling */
        .sidebar {
            height: 100vh;
            background-color: #343a40; /* Dark background */
            color: white;
        }

            .sidebar .nav-link {
                color: white;
                transition: 0.3s;
            }

                .sidebar .nav-link:hover, .sidebar .nav-link.active {
                    background-color: #495057; /* Slightly lighter on hover */
                    border-radius: 5px;
                }

            .sidebar h4 {
                color: #ffc107; /* Bootstrap Warning Yellow */
            }

        .alert-info {
            background-color: #17a2b8;
            color: white;
            border: none;
        }

        .logout-btn {
            background-color: #dc3545;
            color: white;
        }

            .logout-btn:hover {
                background-color: #c82333;
            }
    </style>
</head>
<body>

    <div class="container-fluid">
        <div class="row">
            <!-- Sidebar -->
            <nav class="col-md-3 col-lg-2 d-md-block sidebar p-3">
                <h4 class="text-center mb-3"><i class="bi bi-hospital me-2"></i> Pharmacy Menu</h4>

                <!-- Display Pharmacy ID -->
                <div class="alert alert-info text-center p-2">
                    <strong>Pharmacy ID:</strong> @ViewBag.PharmacyId
                </div>

                <!-- Sidebar Navigation Links -->
                <ul class="nav flex-column">
                    <li class="nav-item">
                        @Html.ActionLink(" Order Details", "OrdersDetails", "Order", new { pharmacyId = ViewBag.PharmacyId }, new { @class = "nav-link text-white" })
                        <i class="bi bi-box-seam me-2"></i>
                    </li>
                    <li class="nav-item">
                        @Html.ActionLink(" Place Order", "PlaceOrder", "Order", new { pharmacyId = ViewBag.PharmacyId }, new { @class = "nav-link text-white" })
                        <i class="bi bi-cart-plus me-2"></i>
                    </li>
                    <li class="nav-item">
                        @Html.ActionLink(" Drug List", "PharmacyDrug", "Inventory", new { pharmacyId = ViewBag.PharmacyId }, new { @class = "nav-link text-white" })
                        <i class="bi bi-capsule me-2"></i>
                    </li>
                </ul>

                <hr />

                <!-- Logout Option -->
                <div class="text-center">
                    <a href="@Url.Action("Logout", "Pharmacy")" class="btn logout-btn w-100">
                        <i class="bi bi-box-arrow-right me-1"></i> Logout
                    </a>
                </div>
            </nav>

            <!-- Main Content Area -->
            <main role="main" class="col-md-9 ml-sm-auto col-lg-10 px-4">
                <h2 class="mt-3">@ViewData["Title"]</h2>
                @RenderBody()
            </main>

            @RenderSection("Scripts", required: false)
        </div>
    </div>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.2.3/dist/js/bootstrap.bundle.min.js"></script>
    <!-- Add jQuery if needed (Bootstrap 5 doesn't require jQuery, but older versions do) -->
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>

    <!-- Add Bootstrap JS bundle -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.2.3/dist/js/bootstrap.bundle.min.js"></script>

</body>
</html>
