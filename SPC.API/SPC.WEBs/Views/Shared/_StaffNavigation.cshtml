@{
    Layout = null; <!-- Ensures this is treated as a layout -->
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewData["Title"] - Staff Dashboard</title>

    <!-- Bootstrap CSS -->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.3/css/all.min.css">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.3/dist/css/bootstrap.min.css" rel="stylesheet">

    <style>
        /* Sidebar Customization */
        .sidebar {
            height: 100vh;
            background-color: #343a40; /* Dark background */
            color: white;
            padding: 15px;
        }

            .sidebar .nav-link {
                color: white;
                transition: 0.3s;
                display: flex;
                align-items: center;
                padding: 10px;
                border-radius: 5px;
            }

                .sidebar .nav-link i {
                    margin-right: 10px;
                }

                .sidebar .nav-link:hover, .sidebar .nav-link.active {
                    background-color: #495057; /* Slightly lighter on hover */
                }

            .sidebar h4 {
                color: #ffc107; /* Bootstrap Warning Yellow */
                text-align: center;
            }

        .logout-btn {
            background-color: #dc3545;
            color: white;
            width: 100%;
            padding: 10px;
            border-radius: 5px;
            text-align: center;
            display: block;
            text-decoration: none;
        }

            .logout-btn:hover {
                background-color: #c82333;
                color: white;
            }

        /* Main Content Styling */
        .main-content {
            padding: 20px;
        }
    </style>
</head>
<body>

    <div class="container-fluid">
        <div class="row">
            <!-- Sidebar -->
            <nav class="col-md-3 col-lg-2 d-md-block sidebar">
                <h4><i class="bi bi-clipboard-check me-2"></i> Staff Menu</h4>

                <!-- Display Staff ID -->
                <div class="alert alert-info text-center p-2">
                    <strong>Staff ID:</strong> @ViewBag.StaffId
                </div>

                <!-- Sidebar Navigation Links -->
                <ul class="nav flex-column">
                    <li class="nav-item">
                        <a href="@Url.Action("staffDrug", "Inventory")" class="nav-link">
                            <i class="bi bi-search"></i> Search Drugs
                        </a>
                    </li>
                    <li class="nav-item">
                        <a href="@Url.Action("SearchByPlant", "Inventory")" class="nav-link">
                            <i class="bi bi-capsule"></i> Drug List
                        </a>
                    </li>
                    <li class="nav-item">
                        <a href="@Url.Action("staff", "Pharmacy")" class="nav-link">
                            <i class="bi bi-hospital"></i> Pharmacy Index
                        </a>
                    </li>
                </ul>

                <hr />

                <!-- Logout Option -->
                <a href="@Url.Action("Logout", "Staff")" class="logout-btn">
                    <i class="bi bi-box-arrow-right me-1"></i> Logout
                </a>
            </nav>

            <!-- Main Content Area -->
            <main role="main" class="col-md-9 col-lg-10 main-content">
                <h2 class="mt-3">@ViewData["Title"]</h2>
                @RenderBody()
            </main>

            @RenderSection("Scripts", required: false)
        </div>
    </div>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.2.3/dist/js/bootstrap.bundle.min.js"></script>
    <!-- Add jQuery if needed (Bootstrap 5 doesn't require jQuery, but older versions do) -->
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>

    <!-- Add Bootstrap JS bundle -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.2.3/dist/js/bootstrap.bundle.min.js"></script>

</body>
</html>
