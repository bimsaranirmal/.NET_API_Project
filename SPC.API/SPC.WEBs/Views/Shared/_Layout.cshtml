<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>State Pharmaceutical Cooperation (SPC)</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.3/css/all.min.css">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.3/dist/css/bootstrap.min.css" rel="stylesheet">
    <style>
        body {
            background-color: #f4f6f9;
        }

        .navbar-dark {
            background-color: #2c3e50 !important;
        }

        .nav-link {
            color: #ecf0f1 !important;
        }

            .nav-link:hover {
                color: #3498db !important;
            }
    </style>
</head>
<body>
    <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-dark bg-dark">
        <div class="container">
            @Html.ActionLink("SPC System", "Index", "Home", new { area = "" }, new { @class = "navbar-brand" })
            <button type="button" class="navbar-toggler" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" title="Toggle navigation" aria-controls="navbarSupportedContent"
                    aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse d-sm-inline-flex justify-content-between">
                <ul class="navbar-nav flex-grow-1">
                    <li>@Html.ActionLink("Home", "Index", "Home", new { area = "" }, new { @class = "nav-link" })</li>
                    <li>@Html.ActionLink("About", "About", "Home", new { area = "" }, new { @class = "nav-link" })</li>
                    <li>@Html.ActionLink("Contact", "Contact", "Home", new { area = "" }, new { @class = "nav-link" })</li>
                    <li class="nav-item dropdown">
                        <a class="nav-link dropdown-toggle" href="#" id="drugsDropdown" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                            <i class="fas fa-capsules me-2"></i>Drugs
                        </a>
                        <ul class="dropdown-menu" aria-labelledby="drugsDropdown">
                            <li>@Html.ActionLink("Search Drugs", "SearchDrugs", "Inventory", new { area = "" }, new { @class = "dropdown-item" })</li>
                        </ul>
                    </li>
                </ul>
                <ul class="navbar-nav">
                    <li class="nav-item dropdown">
                        <a class="nav-link dropdown-toggle" href="#" id="registerDropdown" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                            <i class="fas fa-user-plus me-2"></i>Register
                        </a>
                        <ul class="dropdown-menu" aria-labelledby="registerDropdown">
                            <li>@Html.ActionLink("Staff Registration", "StaffRegister", "Staff", new { area = "" }, new { @class = "dropdown-item" })</li>
                            <li>@Html.ActionLink("Supplier Registration", "Register", "Supplier", new { area = "" }, new { @class = "dropdown-item" })</li>
                            <li>@Html.ActionLink("Pharmacy Registration", "Register", "Pharmacy", new { area = "" }, new { @class = "dropdown-item" })</li>
                        </ul>
                    </li>
                    <li class="nav-item dropdown">
                        <a class="nav-link dropdown-toggle" href="#" id="loginDropdown" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                            <i class="fas fa-sign-in-alt me-2"></i>Login
                        </a>
                        <ul class="dropdown-menu" aria-labelledby="loginDropdown">
                            <li>@Html.ActionLink("Staff Login", "StaffLogin", "Staff", new { area = "" }, new { @class = "dropdown-item" })</li>
                            <li>@Html.ActionLink("Supplier Login", "SupplierLogin", "supplier", new { area = "" }, new { @class = "dropdown-item" })</li>
                            <li>@Html.ActionLink("Pharmacy Login", "PharmacyLogin", "Pharmacy", new { area = "" }, new { @class = "dropdown-item" })</li>
                        </ul>
                    </li>
                </ul>
            </div>
        </div>
    </nav>
   

    <div class="container body-content">
        @RenderBody()
        <hr />
        <footer class="text-center text-muted">
            <p>&copy; @DateTime.Now.Year - State Pharmaceutical Cooperation (SPC)</p>
        </footer>
    </div>
    @Scripts.Render("~/bundles/jquery")
    <!-- Ensure Bootstrap JS is correctly loaded -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.2.3/dist/js/bootstrap.bundle.min.js"></script>
    <!-- Add jQuery if needed (Bootstrap 5 doesn't require jQuery, but older versions do) -->
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>

    <!-- Add Bootstrap JS bundle -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.2.3/dist/js/bootstrap.bundle.min.js"></script>


    @RenderSection("scripts", required: false)
</body>
</html>