@model SPC.Web.Models.Order

@{
    ViewData["Title"] = "Place Order";
}

<h2>Place Order</h2>

<form asp-action="PlaceOrder" method="post">
    <div>
        <label>Pharmacy ID:</label>
        <input asp-for="PharmacyId" class="form-control" required />
    </div>
    <div>
        <label>Order Items:</label>
        <table class="table">
            <thead>
                <tr>
                    <th>Drug ID</th>
                    <th>Quantity</th>
                    <th>Unit Price</th>
                </tr>
            </thead>
            <tbody>
                <tr>
                    <td><input name="Items[0].DrugId" class="form-control" required /></td>
                    <td><input name="Items[0].Quantity" type="number" class="form-control" required /></td>
                    <td><input name="Items[0].UnitPrice" type="number" step="0.01" class="form-control" required /></td>
                </tr>
                <tr>
                    <td><input name="Items[1].DrugId" class="form-control" /></td>
                    <td><input name="Items[1].Quantity" type="number" class="form-control" /></td>
                    <td><input name="Items[1].UnitPrice" type="number" step="0.01" class="form-control" /></td>
                </tr>
            </tbody>
        </table>
    </div>
    <button type="submit" class="btn btn-primary mt-2">Submit Order</button>
</form>
